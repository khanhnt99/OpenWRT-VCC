
config openvpn 'hanoi_hochiminh'
	option dev 'tap0'
	option dev_type 'tap'
	list remote '27.74.244.138 1194'
	option proto 'udp'
	option client '1'
	option remote_cert_tls 'server'
	option enabled '1'
	option nobind '1'
	option persist_key '1'
	option persist_tun '1'
	option ping '10'
	option ping_restart '30'
	option ping_timer_rem '1'
	option reneg_sec '0'
	option script_security '3'
	option verb '3'
#	option up '/usr/bin/ovpn-up'
	option ca '/etc/luci-uploads/hanoi_hochiminh/ca.crt'
	option cert '/etc/luci-uploads/hanoi_hochiminh/client.crt'
	option key '/etc/luci-uploads/hanoi_hochiminh/client.key'
	option cipher 'AES-256-CBC'
	option status '/var/log/openvpn/openvpn-status.log'
	option log '/var/log/openvpn/openvpn.log'
	option log_append '/var/log/openvpn/openvpn.log'

config openvpn 'sohapay'
	option dev 'tap2'
	option dev_type 'tap'
	list remote '45.124.93.117 15000'
	option proto 'tcp-client'
	option remote_cert_tls 'server'
	option client '1'
	option compress 'lzo'
	option enabled '1'
	option nobind '1'
	option persist_key '1'
	option persist_tun '1'
	option ping '10'
	option ping_restart '30'
	option ping_timer_rem '1'
	option reneg_sec '0'
	option script_security '3'
	option verb '3'
	option ca '/etc/luci-uploads/cbid.openvpn.sohapay.ca'
	option cert '/etc/luci-uploads/cbid.openvpn.sohapay.cert'
	option key '/etc/luci-uploads/cbid.openvpn.sohapay.key'

