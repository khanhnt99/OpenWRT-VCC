config uhttpd 'main'
	option cert '/etc/uhttpd.crt'
	option cgi_prefix '/cgi-bin'
	option home '/www'
	option http_keepalive '24'
	option key '/etc/uhttpd.key'
	list listen_http '192.168.21.1:80'
	list listen_https '192.168.21.1:443'
	option max_connections '1024'
	option max_requests '1'
	option network_timeout '5'
	option redirect_https '1'
	option rfc1918_filter '1'
	option script_timeout '15'
	option tcp_keepalive '1'
	option ubus_prefix '/ubus'

config cert 'defaults'
	option bits '2048'
	option commonname 'VCCloud'
	option country 'VN'
	option days '1000'
	option location 'VCCloud'
	option state 'Ha Noi'
